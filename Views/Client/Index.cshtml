@model List<SS_Case.Models.Client>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Register a client</h3>
  </div>  
  <div class="panel-body">
    <form class="form-horizontal" asp-action="Create" asp-controller="Client">
      <div class="form-group">
        <label class="col-sm-1 control-label">Name</label>
        <div class="col-sm-10">
          <input name="Name" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-1 control-label">Country</label>
        <div class="col-sm-10">
          <select name="Country" class="form-control">
            <option>Brazil</option>
            <option>Sweden</option>
          </select>
        </div>
      </div>
      <div class="col-sm-offset-1 col-sm-10">
        <button type="submit" class="btn btn-default">Register</button>
      </div>
    </form>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Client list</h3>
  </div>
  <div class="panel-body">
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Country</th> 
        <th></th> 
      </tr>
      @foreach (var item in Model)
      {
        <a asp-action="Details" asp-controller="Client" asp-route-id="@item.ClientID">
          <tr>          
            <td>@item.Name</td>
            <td>@item.Country</td> 
            <td>
              <button type="button" class="btn btn-default btn-xs" data-id="@item.ClientID">
                <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
              </button>
              <button type="button" class="btn btn-default btn-xs" data-id="@item.ClientID">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </button>          
            </td>
          </tr>  
        </a>    
      }
    </table>  
  </div>
  </div>
</div>